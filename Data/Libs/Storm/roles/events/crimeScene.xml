<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "../../storm.dtd">
<storm>
  <rules>
    <rule name="crimeScene_bandits">
      <selectors>
        <hasName name="crimeScene_bandits*" />
      </selectors>
      <operations>
        <addRole name="EVENT_CRIME_SCENE_BANDITA" />
        <addRole name="EVENT_CRIME_SCENE_BANDITA_VIDI_HRACE_PO_EVENTU" />        
      </operations>
    </rule>

    <rule name="crimeScene_bandits_looter">
      <selectors>
        <hasName name="crimeScene_bandits_looter*" />
      </selectors>
      <operations>
        <addRole name="EVENT_CRIME_SCENE_BANDITA_LOOTER" />
      </operations>
    </rule>

    <rule name="crimeScene_bandits_watcher">
      <selectors>
        <hasName name="crimeScene_bandits_watcher*" />
      </selectors>
      <operations>
        <addRole name="EVENT_CRIME_SCENE_BANDITA_WATCHER" />
      </operations>
    </rule>    
  </rules>
</storm>

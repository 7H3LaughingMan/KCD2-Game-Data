<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "storm.dtd">
<storm>
	<rules>
		<!-- Talk of 3 people -->
		<rule name="test_trialogue_1">
			<selectors>
				<hasName name="test_trialogue_1" />
			</selectors>
			<operations>
				<addRole name="TEST_TRIALOG_1" />
			</operations>
		</rule>
		
		<rule name="test_trialogue_2">
			<selectors>
				<hasName name="test_trialogue_2" />
			</selectors>
			<operations>
				<addRole name="TEST_TRIALOG_2" />
			</operations>
		</rule>
		
		<!-- Ingame dialog -->
		<rule name="test_dialogue_1">
			<selectors>
				<hasName name="test_dialogue_1" />
			</selectors>
			<operations>
				<addRole name="TEST_GOSSIP_1" />
			</operations>
		</rule>
		
		<rule name="test_dialogue_2">
			<selectors>
				<hasName name="test_dialogue_2" />
			</selectors>
			<operations>
				<addRole name="TEST_GOSSIP_2" />
			</operations>
		</rule>
		
		<!-- Talk of 2 people -->
		<rule name="test_dialogue">
			<selectors>
				<hasName name="test_dialogue_*" />
			</selectors>
			<operations>
				<addRole name="TEST_DIALOG" />
				<addRole name="TEST_ROZLOUCENI" />
			</operations>
		</rule>
	</rules>
</storm>

<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "!storm.dtd">
<storm>
	<rules>

		<rule name="drak_gerhart">
			<selectors>
				<hasName name="drak_gerhart" />
			</selectors>
			<operations>
				<addRole name="GERHART" />
			</operations>
		</rule>		
		
		<rule name="kbyl_slava">
			<selectors>
				<hasName name="kbyl_slava" />
			</selectors>
			<operations>
				<addRole name="FARAR_SLAVA" />
			</operations>
		</rule>		
		
		<rule name="ksed_opat">
			<selectors>
				<hasName name="ksed_opat" />
			</selectors>
			<operations>
				<addRole name="OPAT_JAN_SEDLEC" />
			</operations>
		</rule>		
		
		<rule name="drak_alchemist">
			<selectors>
				<hasName name="drak_alchemist" />
			</selectors>
			<operations>
				<addRole name="ALCHYMISTA_LEOPOLD" />
				<addRole name="ALCHYMISTA_LEOPOLD_BUDE_UTOCIT" />
			</operations>
		</rule>	
		
		<rule name="drak_zikmund_soldier">
			<selectors>
				<hasName name="drak_zikmund_soldier*" />
			</selectors>
			<operations>
				<addRole name="VOJAK_NASEL_STOPU_KE_KOSTEM" />
                <addRole name="VOJAK_NENACHAZI_STOPU_KE_KOSTEM" />
                
			</operations>
		</rule>		
		
		<rule name="drak_zikmund_soldierLeader">
			<selectors>
				<hasName name="drak_zikmund_soldierLeader" />
			</selectors>
			<operations>
				<addRole name="VELITEL_DRACIHO_ODDILU" />
			</operations>
		</rule>		
		
		<rule name="krab_woodcutter">
			<selectors>
				<hasName name="krab_woodcutter" />
			</selectors>
			<operations>
				<addRole name="NALEZCE_KOSTI" />
				<addRole name="VYJEDNAVANI_MUZ" />
			</operations>
		</rule>	
		
		<rule name="quest giver">
			<selectors>
				<hasName name="kbyl_innkeeper" />
			</selectors>
			<operations>
				<addRole name="HOSPODSKY_BYLANY" />
			</operations>
		</rule>	
        
        		<rule name="drak_alchemistBodyguard1">
			<selectors>
				<hasName name="drak_alchemistBodyguard1" />
			</selectors>
			<operations>
				<addRole name="ALCHYMISTUV_BODYGUARD_1" />
			</operations>
		</rule>
        
              		<rule name="drak_alchemistBodyguard2">
			<selectors>
				<hasName name="drak_alchemistBodyguard2" />
			</selectors>
			<operations>
				<addRole name="ALCHYMISTUV_BODYGUARD_2" />
			</operations>
		</rule>		
        
		<rule name="inkeeper_tipsters">
			<selectors>
            <or>
				<hasName name="kbyl_innkeeper" />
                <hasName name="kmis_inkeeper" />
                <hasName name="kpri_innkeeper" />
                                  
            </or>   
			</selectors>
			<operations>
				<addRole name="QUEST_TIPSTER_DRAK_MUZ" />
			</operations>
		</rule>	
        
        		<rule name="inkeeper_tipsters_woman">
			<selectors>
                   <hasName name="ksta_innkeeper" />

			</selectors>
			<operations>
				<addRole name="QUEST_TIPSTER_DRAK_ZENA" />
			</operations>
		</rule>	
		
        
          		<rule name="inkeeper_tipsters_nemec">
			<selectors>
                   <hasName name="kpri_innkeeper" />

			</selectors>
			<operations>
				<addRole name="QUEST_TIPSTER_DRAK_NEMEC" />
			</operations>
		</rule>	
		
        
        
    </rules>
</storm>
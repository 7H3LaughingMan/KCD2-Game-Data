			</selectors>
			<operations>
				<addRole name="QUEST_TIPSTER_TRAGEDIE_HASTAL" />
			</operations>
		</rule>

		<rule name="tragedieNaDanemarku_tipster_man">
			<selectors>
				<or>
					<hasName name="kmal_innkeeper" />

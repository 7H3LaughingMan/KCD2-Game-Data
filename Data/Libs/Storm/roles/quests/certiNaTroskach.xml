<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "!storm.dtd">
<storm>
	<rules>

		<rule name="certiNaTroskach_komori">
			<selectors>
				<hasName name="ttro_komori" />
			</selectors>
			<operations>
				<addRole name="KOMORI_TROSKY" />
			</operations>
		</rule>		

		<rule name="certiNaTroskach_baba">
			<selectors>
				<hasName name="ttro_baba" />
			</selectors>
			<operations>
				<addRole name="BABA_TROSKY" />
			</operations>
		</rule>	

		<rule name="certiNaTroskach_panna">
			<selectors>
				<hasName name="ttro_panna" />
			</selectors>
			<operations>
				<addRole name="PANNA_TROSKY" />
			</operations>
		</rule>	
		
		<rule name="certiNaTroskach_kovar">
			<selectors>
				<hasName name="ttro_kovar" />
			</selectors>
			<operations>
				<addRole name="KOVAR_TROSKY" />

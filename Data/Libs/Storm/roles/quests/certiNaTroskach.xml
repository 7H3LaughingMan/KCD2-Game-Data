			</operations>
		</rule>	
		
		<rule name="certiNaTroskach_reakceNaKropeniMuz">
			<selectors>
				<or>
					<hasName name="ttro_cernyBartos" />
					<hasName name="ttro_herman" />
					<hasName name="ttro_hasek" />
					<hasName name="ttro_man_2" />
					<hasName name="ttro_man_5" />
					<hasName name="ttro_man_10" />
					<hasName name="ttro_man_11" />
					<hasName name="ttro_man_12" />
					<hasName name="ttro_man_14" />
					<hasName name="ttro_man_15" />
					<hasName name="ttro_man_17" />
					<hasName name="ttro_man_26" />
				</or>
			</selectors>
			<operations>
				<addRole name="REAKCE_NA_KROPENI_OHNIST_MUZ" />
			</operations>
		</rule>	
				
		<rule name="certiNaTroskach_reakceNaKropeniZena">
			<selectors>
				<or>
					<hasName name="ttro_woman_5" />
					<hasName name="ttro_woman_7" />
					<hasName name="ttro_woman_8" />
					<hasName name="ttro_woman_9" />
					<hasName name="ttro_woman_10" />
					<hasName name="ttro_woman_11" />
					<hasName name="ttro_woman_12" />
					<hasName name="ttro_woman_13" />				
					<hasName name="ttro_woman_14" />	
					<hasName name="ttro_jitka" />

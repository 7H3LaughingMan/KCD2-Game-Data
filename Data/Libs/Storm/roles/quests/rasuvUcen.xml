<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "../storm.dtd">
<storm>
	<rules>

		<rule name="rasuvucen_mlynar">
			<selectors>
				<hasName name="tpod_krejzl" />
			</selectors>
			<operations>
				<addRole name="MLYNAR_KREJZL" />
			</operations>
		</rule>

		<rule name="rasuvucen_drozd">
			<selectors>
				<hasName name="ttkc_drozd" />

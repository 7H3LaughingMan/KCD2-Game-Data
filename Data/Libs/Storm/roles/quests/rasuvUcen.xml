			</operations>
		</rule>
		
		<rule name="rasuvucen_ambusherTalker">
			<selectors>
				<hasName name="rasuvUcen_ambusherTalker" />
			</selectors>
			<operations>
				<addRole name="PROVOKATER_SLATEJOV_1" />
			</operations>
		</rule>
		
		<rule name="rasuvucen_ambusher2">
			<selectors>
				<or>
					<hasName name="rasuvUcen_ambusher1" />
					<hasName name="rasuvUcen_ambusher2" />
				</or>
			</selectors>
			<operations>
				<addRole name="PROVOKATER_SLATEJOV_2" />
			</operations>
		</rule>
		
		<rule name="rasuvucen_wife">

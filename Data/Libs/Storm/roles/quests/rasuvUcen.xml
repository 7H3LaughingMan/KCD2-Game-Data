			</operations>
		</rule>
		
		<rule name="rasuvucen_prodavac_slatejov">
			<selectors>
				<hasName name="tsla_vajsar" />
			</selectors>
			<operations>
				<addRole name="PRODAVAC_SLATEJOV" />
			</operations>
		</rule>

    <rule name="rasuvucen_doubravka">

<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "!storm.dtd">
<storm>
	<rules>

		<rule name="zachrana_baba">
			<selectors>
				<hasName name="tvez_bozena" />
			</selectors>
			<operations>
				<addRole name="BOZENA_KORENARKA" />
				<addRole name="BOZENA_KORENARKA_TUTORIAL_CHAT" />
				<addRole name="BOZENA_KORENARKA_HRACI_TO_TRVA" />			
				<addRole name="BOZENA_KORENARKA_HRAC_OTOCIL_HODINY_PRI_VARENI" />			
				<addRole name="BOZENA_KORENARKA_TUTORIAL_HRAC_NALIL_VINO" />
				<addRole name="BOZENA_KORENARKA_TUTORIAL_HRAC_NALIL_VODU" />
				<addRole name="BOZENA_KORENARKA_TUTORIAL_HRAC_NALIL_KORALU" />
				<addRole name="BOZENA_KORENARKA_TUTORIAL_HRAC_NALIL_OLEJ" />
				<addRole name="BOZENA_KORENARKA_HRACI_TO_TRVA_POTOM_CO_UZ_CAST_UDELAL" />
				<addRole name="BOZENA_KORENARKA_LECICI_BARKY" />
			</operations>
		</rule>

		<rule name="zachrana_ptacek">
			<selectors>
				<hasName name="tkop_ptacek" />
			</selectors>
			<operations>
				<addRole name="PTACEK_ZRANENE_BARKY" />
			</operations>
		</rule>				

		<rule name="zachrana_dcera">
			<selectors>
				<hasName name="tvez_pavlena" />
			</selectors>
			<operations>
				<addRole name="PAVLENA_DCERA_KORENARKY" />
			</operations>
		</rule>

		<rule name="zachrana_seeker1">
			<selectors>
				<hasName name="tneb_mikes" />
			</selectors>
			<operations>
				<addRole name="PATRAC1" />
				<addRole name="ZIZKOVA_BANDA_MIKES_VSTUP_COMBAT" />
			</operations>
		</rule>		

		<rule name="zachrana_seeker2">
			<selectors>
				<hasName name="tneb_kozlik" />
			</selectors>
			<operations>
				<addRole name="PATRAC2" />
				<addRole name="ZIZKOVA_BANDA_KOZLIK_VSTUP_COMBAT" />
			</operations>
		</rule>		

		<rule name="zachrana_seekers">
			<selectors>
				<or>
					<hasName name="tneb_mikes" />
					<hasName name="tneb_kozlik" />
				</or>
			</selectors>
			<operations>
				<addRole name="PATRACI" />
				<addRole name="MIKES_NEBO_KOZLIK_ODMITANI_VZDAVANI" />
				<addRole name="PATRACI_ZACHRANA_VEZICKO_ROZLOUCENI_PO_DIALOGU" />
				<addRole name="PATRACI_ZACHRANA_VEZICKO_ROZLOUCENI_PO_DIALOGU" />
				<addRole name="PATRACI_ZACHRANA_VEZICKO_VIDI_MRTVOLU" />
			</operations>
		</rule>		

		
    </rules>
</storm>
<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "../storm.dtd">
<storm>
	<rules>

		<rule name="sesivaniTonici_francek">
			<selectors>
				<hasName name="kkut_francek" />
			</selectors>
			<operations>
				<addRole name="FRANCEK" />
				<addRole name="SESIVANI_TONICI_PO_FAILU_QUESTU" />
				<addRole name="SESIVANI_TONICI_REFUSAL_PO_BITCE" />
				<addRole name="SESIVANI_TONICI_DOPTAVACKA" />
				<addRole name="SESIVANI_TONICI_ODPOVED_NA_SPODKY" />
			</operations>
		</rule>
		
		<rule name="sesivaniTonici_anton">
			<selectors>
				<hasName name="kkut_anton" />
			</selectors>
			<operations>
				<addRole name="ANTON_KASPAR" />
				<addRole name="SESIVANI_TONICI_PO_FAILU_QUESTU" />
				<addRole name="SESIVANI_TONICI_REFUSAL_PO_BITCE" />
				<addRole name="SESIVANI_TONICI_DOPTAVACKA" />
				<addRole name="SESIVANI_TONICI_ODPOVED_NA_SPODKY" />
			</operations>
		</rule>

		<rule name="sesivaniTonici_predak_vlach">
			<selectors>
				<hasName name="kkut_vlach" />
			</selectors>
			<operations>
				<addRole name="PREDAK_VLACH" />
				<addDiceRoles_man_ingameBarksOnly />
			</operations>
		</rule>

		<rule name="sesivaniTonici_tobias">
			<selectors>
				<hasName name="kkut_tobias" />
			</selectors>
			<operations>
				<addRole name="KNEZ_TOBIAS" />
			</operations>
		</rule>

		<rule name="sesivaniTonici_elsa">
			<selectors>
				<hasName name="kkut_elsa" />
			</selectors>
			<operations>
				<addRole name="ELSE" />
			</operations>
		</rule>

		<rule name="sesivaniTonici_svaty_prvni">
			<selectors>
				<hasName name="kkut_prvniSvaty" />
			</selectors>
			<operations>
				<addRole name="SVATY_PRVNI" />
			</operations>
		</rule>

		<rule name="sesivaniTonici_jorg">
			<selectors>
				<hasName name="kkut_jorgPrank" />
			</selectors>
			<operations>
				<addRole name="JORG_PRANK" />
				<addRole name="SESIVANI_TONICI_VUDCE_SVATYCH" />
			</operations>
		</rule>
		
		<rule name="sesivaniTonici_jorgReplacement">
			<selectors>
				<hasName name="sesivaniTonici_jorgReplacement" />
			</selectors>
			<operations>
				<addRole name="SESIVANI_TONICI_VUDCE_SVATYCH" />
			</operations>
		</rule>
		
    </rules>
</storm>
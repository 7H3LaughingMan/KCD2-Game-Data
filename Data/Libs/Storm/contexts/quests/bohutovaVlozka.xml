<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "storm.dtd">
<storm>
  <rules>
    <rule name="bohutovaVlozka_gossip_context_man">
      <selectors>
        <and>
          <isMan />
          <isNotPlayer />
        </and>
      </selectors>
      <operations>
        <addContext name="situation_gossip" />
      </operations>
    </rule>
    <rule name="bohutovaVlozka_gossip_context_woman">
      <selectors>
        <and>
          <isWoman />
          <isNotPlayer />
        </and>
      </selectors>
      <operations>
        <addContext name="situation_gossip" />
      </operations>
    </rule>
  </rules>
</storm>
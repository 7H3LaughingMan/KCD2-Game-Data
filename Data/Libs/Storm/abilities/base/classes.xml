		<!-- Bailiff -->
		<rule name="rpg_socialClass_bailiffs">
		
			<selectors>
				<hasSocialClass name="bailiff" />
			</selectors>
		
			<operations>
				<combatLevelBonus/>
				<modAttribute stat="courage" minMod="4" maxMod="6" />
				<modAttribute stat="charisma" minMod="15" maxMod="20" />
				<modAttribute stat="speech" mod="10" />
				<modAttribute skill="scholarship" minMod="10" maxMod="18" />
				<modAttribute skill="drinking" minMod="10" maxMod="20" />
				<modAttribute skill="horse_riding" minMod="4" maxMod="6" />
			</operations>
		
		</rule>
		

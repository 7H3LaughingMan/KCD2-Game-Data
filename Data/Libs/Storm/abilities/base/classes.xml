<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>

	<customOperations>

		<!-- meant for social classes that are likely to fight-->
		<customOperation name="combatLevelBonus" mode="and"> 

			<modAttribute stat="combatLevel" minMod="0.1" maxMod="0.2" />

		</customOperation>

		<!-- leader social class bonus-->
		<customOperation name="leaderBonus" mode="and"> 

			<modAttribute stat="charisma" minMod="2" maxMod="4" />
			<modAttribute stat="combatLevel" minMod="0.1" maxMod="0.3" />

		</customOperation>

		<!-- meant for social classes that are likely to trade-->
		<customOperation name="addCraftsmenStats" mode="and">

			<modAttribute stat="charisma" minMod="2" maxMod="4" />
			<modAttribute skill="craftsmanship" minMod="10" maxMod="16" />
			<modAttribute stat="barter" minMod="10" maxMod="16" />
			<modAttribute stat="shadiness" minMod="0" maxMod="0.15" />

		</customOperation>
		
	</customOperations>

	<rules>


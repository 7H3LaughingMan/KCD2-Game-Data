				<modAttribute skill="stealth" minMod="2" maxMod="4" />
				<modAttribute skill="thievery" minMod="4" maxMod="8" />
				<modAttribute skill="horse_riding" minMod="8" maxMod="10" />
				<modAttribute skill="survival" minMod="12" maxMod="18" />

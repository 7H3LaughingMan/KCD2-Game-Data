<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="nebakovObrana_attacker_rpg">
			<selectors>
                <hasName name="nebakovObrana_attacker*" />
			</selectors>	
			<operations>		
				<setAttribute stat="strength" minValue="15" maxValue="16" />
				<setAttribute stat="agility" minValue="14" maxValue="16" />			
				<setAttribute stat="vitality" minValue="9" maxValue="12" />
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="courage" value="30" />	
				<setAttribute skill="marksmanship" minValue="6" maxValue="9" />
				<setAttribute skill="weapon_sword"  minValue="11" maxValue="14"/>
				<setAttribute skill="weapon_large" minValue="11" maxValue="14" />
				<setAttribute skill="heavy_weapons" minValue="11" maxValue="14" />
				<setAttribute skill="defense" value="6" />
				<removePerk name="Dodger" />
			</operations>			
		</rule>
		<rule name="nebakovObrana_attackerFinal_rpg">
			<selectors>
                <hasName name="nebakovObrana_attackerGroupF*" />
			</selectors>	
			<operations>		
				<setAttribute stat="strength" value="20" />
				<setAttribute stat="agility" minValue="14" maxValue="15" />		
				<setAttribute stat="vitality" minValue="9" maxValue="12" />
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="courage" value="30" />	
				<setAttribute skill="marksmanship" minValue="6" maxValue="9" />
				<setAttribute skill="weapon_sword"  minValue="12" maxValue="14"/>
				<setAttribute skill="weapon_large" minValue="12" maxValue="14" />
				<setAttribute skill="heavy_weapons" minValue="12" maxValue="14" />
				<setAttribute skill="defense" minValue="5" maxValue="6" />
				<removePerk name="Dodger" />
			</operations>			
		</rule>
		<rule name="nebakovObrana_attacker_archers_rpg">
			<selectors>
				<or>
                	<hasName name="nebakovObrana_beforeBattleRanged*" />
                	<hasName name="nebakovObrana_freeRanger*" />
                </or>
			</selectors>	
			<operations>		
				<setAttribute stat="strength" minValue="14" maxValue="16" />
				<setAttribute stat="agility" minValue="14" maxValue="16" />	
				<setAttribute stat="vitality" minValue="10" maxValue="12" />		
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="courage" value="30" />	
				<setAttribute skill="marksmanship" minValue="9" maxValue="13" />
				<setAttribute skill="weapon_sword" minValue="11" maxValue="14" />
				<setAttribute skill="weapon_large" minValue="11" maxValue="14" />
				<setAttribute skill="heavy_weapons" minValue="11" maxValue="14" />
				<setAttribute skill="defense" value="7" />
				<removePerk name="Dodger" />
			</operations>			
		</rule>
    </rules>
</storm>
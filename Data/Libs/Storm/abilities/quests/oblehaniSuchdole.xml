<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>

        <rule name="oblehaniSuchdole_enemies_rpg">
			<selectors>
				<or>
                	<hasName name="oblehaniSuchdole_nepretale*" />
                	<hasName name="oblehaniSuchdole_nepratele*" />
                	<hasName name="oblehaniSuchdole_extras_*" />
                </or>
			</selectors>
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="20" maxValue="24" />
				<setAttribute stat="agility" minValue="19" maxValue="22" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="vitality" minValue="14" maxValue="18" />
				<setAttribute skill="marksmanship" minValue="5" maxValue="8" />
				<setAttribute skill="weapon_sword" minValue="16" maxValue="25" />
				<setAttribute skill="weapon_large" minValue="16" maxValue="25" />
				<setAttribute skill="heavy_weapons" minValue="16" maxValue="25" />
				<setAttribute skill="defense" value="8" />
			</operations>			
		</rule>

		<rule name="oblehaniSuchdole_friends_rpg">		
			<selectors>
				<or>
                    <hasName name="oblehaniSuchdole_guard*" />
                    <hasName name="oblehaniSuchdole_spojenci*" />
                    <hasName name="oblehaniSuchdole_nocniUtok_spojenec*" />
                </or>
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="20" maxValue="26" />
				<setAttribute stat="agility" minValue="20" maxValue="24" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="vitality" minValue="18" maxValue="20" />
				<setAttribute skill="marksmanship" minValue="25" maxValue="30" />
				<setAttribute skill="weapon_sword" minValue="15" maxValue="22" />
				<setAttribute skill="weapon_large" minValue="15" maxValue="22" />
				<setAttribute skill="heavy_weapons" minValue="15" maxValue="22" />
				<setAttribute skill="defense" minValue="10" maxValue="25" />
			</operations>			
		</rule>
    </rules>
</storm>
<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="hladAZmar_enemies_archers_rpg">
			<selectors>
                <or>
                    <hasName name="hladAZmar_battle_forecourtArcher_enemy*" />
                    <hasName name="hladAZmar_battle_southshooterSoldier*" /> 
                    <hasName name="hladAZmar_battle_westshooterSoldier*" /> 
                </or>
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="20" maxValue="24" />
				<setAttribute stat="agility" minValue="18" maxValue="22" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="vitality" minValue="15" maxValue="18" />
				<setAttribute skill="marksmanship" minValue="10" maxValue="12" />
				<setAttribute skill="weapon_sword" minValue="20" maxValue="25" />
				<setAttribute skill="weapon_large" minValue="20" maxValue="25" />
				<setAttribute skill="heavy_weapons" minValue="20" maxValue="25" />
				<setAttribute skill="defense" minValue="5" maxValue="10" />
			</operations>
		</rule>


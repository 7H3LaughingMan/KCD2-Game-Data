<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
		<!-- ====ENEMY BERGOV SOLDIERS==== -->
		<rule name="utokNaMalesov_reinforcementVillage">		
			<selectors>
                    <hasName name="utokNaMalesov_additionalVillageReinforcement*" />
			</selectors>	
			<operations>
				<setAttribute stat="strength" minValue="18" maxValue="22" />
				<setAttribute stat="agility" minValue="18" maxValue="22" />
				<setAttribute stat="courage" value="30" />	
				<setAttribute stat="vision" value="17" />
                <setAttribute stat="hearing" value="17" />
				<setAttribute skill="marksmanship" minValue="18" maxValue="22" />
				<setAttribute skill="weapon_sword" minValue="18" maxValue="21"/>
				<setAttribute skill="weapon_large" minValue="19" maxValue="23" />
				<setAttribute skill="heavy_weapons" minValue="18" maxValue="21" />
				<setAttribute skill="defense" minValue="9" maxValue="12"  />
			</operations>			
		</rule>


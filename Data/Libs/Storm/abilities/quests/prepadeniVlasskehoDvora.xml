<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="prepadeniVlasskehoDvora_enemies_rpg">
			<selectors>
                <hasName name="prepadeniVlasskehoDvora_attacker_*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="18" maxValue="20" />
				<setAttribute stat="agility" minValue="16" maxValue="20" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="vitality" minValue="8" maxValue="12" />
				<setAttribute skill="marksmanship" minValue="5" maxValue="8" />
				<setAttribute skill="weapon_sword" minValue="12" maxValue="18" />
				<setAttribute skill="weapon_large" minValue="12" maxValue="18" />
				<setAttribute skill="heavy_weapons" minValue="12" maxValue="18" />
				<setAttribute skill="defense" value="8" />
				<removePerk name="Dodger" />
			</operations>
		</rule>
    </rules>
</storm>
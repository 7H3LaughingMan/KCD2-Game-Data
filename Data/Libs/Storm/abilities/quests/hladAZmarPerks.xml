<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="hladAZmar_enemies_archers_rpg_perks">
			<selectors>
                <or>
                    <hasName name="hladAZmar_battle_forecourtArcher_enemy*" />
                    <hasName name="hladAZmar_battle_southshooterSoldier*" /> 
                    <hasName name="hladAZmar_battle_westshooterSoldier*" /> 
                </or>
			</selectors>	
			<operations>
				<removePerk name="Dodger" />
			</operations>
		</rule>

        <rule name="hladAZmar_enemies_ladderSoldiers_rpg_perks">
			<selectors>
                <or>
                    <hasName name="hladAZmar_battle_southLadderSoldier*" />
                    <hasName name="hladAZmar_battle_southPalisade_enemy*" />
                    <hasName name="hladAZmar_battle_towerAtDoor_enemy*" />
                    <hasName name="hladAZmar_battle_towerBehindDoor_enemy*" />
                    <hasName name="hladAZmar_battle_westLadderSoldier*" />
                    <hasName name="hladAZmar_battle_westPalisade_enemy*" />
                </or>
			</selectors>	
			<operations>
				<removePerk name="Dodger" />
			</operations>			
		</rule>

		<rule name="hladAZmar_friends_rpg_perks">		
			<selectors>
				<or>
                    <hasName name="hladAZmar_battle_westPalisade_friend*" />
                    <hasName name="hladAZmar_battle_forecourtArcher_friend*" />
                    <hasName name="hladAZmar_battle_southPalisade_friend*" />
                    <hasName name="hladAZmar_battle_westPalisade_alternativeFriend*" />
                    <hasName name="hladAZmar_battle_towerBehindDoor_friend*" />
                </or>
			</selectors>	
			<operations>
				<removePerk name="Dodger" />
			</operations>			
		</rule>

		<rule name="hladAZmar_others_enemy_rpg_perks">		
			<selectors>
				<or>
					<hasName name="hladAZmar_afterbattle_forecourtArcher_enemy*" />
					<hasName name="hladAZmar_battle_locationSouth*" />
					<hasName name="hladAZmar_battle_locationWest*" />
				</or>
			</selectors>	
			<operations>
				<removePerk name="Dodger" />
			</operations>			
		</rule>

    </rules>
</storm>
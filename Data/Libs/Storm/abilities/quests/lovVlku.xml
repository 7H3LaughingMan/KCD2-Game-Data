<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
		<rule name="wolves_perception">
			<selectors>
				<or>
					<hasName name="lovVlku_firstPack_dog_*" />
					<hasName name="lovVlku_forthPack_dog_*" />
					<hasName name="lovVlku_secondPack_dog_*" />
				</or>
			</selectors>
			<operations>
				<setAttribute stat="vision" value="25" />
				<setAttribute stat="hearing" value="25" />
			</operations>
		</rule>
    </rules>
</storm>
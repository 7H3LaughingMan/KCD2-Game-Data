<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>

        <rule name="prepadeni_banditArchers">		
			<selectors>
                <or>
                    <hasName name="prepadeni_banditArcher_1" />
					<hasName name="prepadeni_banditArcher_2" />
                    <hasName name="prepadeni_banditArcher_3" />
                    <hasName name="prepadeni_banditArcher_4" />
                    <hasName name="prepadeni_banditArcherOnHill" />
                </or>
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="20" />			
				<setAttribute stat="strength" value="20" />
				<setAttribute stat="agility" value="20" />			
				<setAttribute stat="vision" value="20" />
				<setAttribute stat="vitality" value="20" />
			</operations>		
		</rule>

		<rule name="prepadeni_banditArchers_basic">		
			<selectors>
                <or>
                    <hasName name="prepadeni_banditArcher_2" />
                    <hasName name="prepadeni_banditArcher_3" />
                    <hasName name="prepadeni_banditArcher_4" />
                </or>
			</selectors>	
			<operations>
				<setAttribute skill="marksmanship" value="5" />
			</operations>		
		</rule>

        <rule name="prepadeni_banditArchers_expert">		
			<selectors>
				<or>
                    <hasName name="prepadeni_banditArcher_1" />
					<hasName name="prepadeni_banditArcherOnHill" />
				</or>
			</selectors>	
			<operations>
				<setAttribute skill="marksmanship" value="20" />
			</operations>		
		</rule>	

		<rule name="prepadeni_guard_vision">		
			<selectors>
				<hasName name="prepadeni_guard" />
			</selectors>	
			<operations>
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="vision" value="15" />
			</operations>		
		</rule>

		<rule name="prepadeni_bandits_stats">		
			<selectors>
				<or>
					<hasName name="prepadeni_bandit_5" />
					<hasName name="prepadeni_bandit_6" />
					<hasName name="prepadeni_bandit_7" />
					<hasName name="prepadeni_bandit_8" />
					<hasName name="prepadeni_bandit_9" />
					<hasName name="prepadeni_bandit_10" />
					<hasName name="prepadeni_bandit_11" />
					<hasName name="prepadeni_bandit_12" />
					<hasName name="prepadeni_bandit_14" />
				</or>
			</selectors>	
			<operations>
				<setAttribute stat="vision" value="15" />
			</operations>			
		</rule>

		<rule name="prepadeni_bandits_leader_stats">		
			<selectors>
				<or>
					<hasName name="prepadeni_bandit_1" />
				</or>
			</selectors>	
			<operations>
				<setAttribute stat="vision" value="25" />
				<setAttribute stat="hearing" value="30" />
			</operations>			
		</rule>

		<rule name="prepadeni_bandits_firstGroup_stats">		
			<selectors>
				<or>
					<hasName name="prepadeni_bandit_2" />
					<hasName name="prepadeni_bandit_3" />
					<hasName name="prepadeni_bandit_4" />
					<hasName name="prepadeni_bandit_13" />
				</or>
			</selectors>	
			<operations>
				<setAttribute stat="vision" value="20" />
				<setAttribute stat="hearing" value="20" />
			</operations>			
		</rule>


		<rule name="prepadeni_banditsWithTorch_stats">		
			<selectors>
				<or>
					<hasName name="prepadeni_banditWithTorch_1" />
					<hasName name="prepadeni_banditWithTorch_2" />
				</or>
			</selectors>	
			<operations>
				<setAttribute stat="vision" value="20" />
			</operations>			
		</rule>

    </rules>
</storm>
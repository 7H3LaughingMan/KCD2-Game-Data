<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>

        <rule name="rutinaAVypad_enemies_diggers_rpg">		
			<selectors>
				<or>
					<hasName Name="rutinaAVypad_enemy_attacker*" />
					<hasName Name="rutinaAVypad_enemy_extras*" />
					<hasName Name="rutinaAVypad_enemy_digger*" />
					<hasName Name="rutinaAVypad_enemy_gunner*" />
				</or>
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="18" maxValue="24" />
				<setAttribute stat="agility" minValue="19" maxValue="22" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="vitality" minValue="11" maxValue="21" />
				<setAttribute skill="marksmanship" minValue="14" maxValue="16" />
				<setAttribute skill="weapon_sword" minValue="20" maxValue="25" />
				<setAttribute skill="weapon_large" minValue="20" maxValue="25" />
				<setAttribute skill="heavy_weapons" minValue="20" maxValue="25" />
				<setAttribute skill="defense" minValue="20" maxValue="25" />
			</operations>			
		</rule>

        <rule name="rutinaAVypad_enemies_reinforcements_rpg">		
			<selectors>
				<hasName Name="rutinaAVypad_enemy_shieldBearer*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="20" />
				<setAttribute stat="agility" value="20" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="vitality" value="20" />
				<setAttribute skill="marksmanship" minValue="14" maxValue="20" />
				<setAttribute skill="weapon_sword" value="20" />
				<setAttribute skill="weapon_large" value="20" />
				<setAttribute skill="heavy_weapons" value="20" />
				<setAttribute skill="defense" value="25" />
			</operations>			
		</rule>

		<rule name="rutinaAVypad_friends_archers_rpg">		
			<selectors>
                <hasName name="rutinaAVypad_friend*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" minValue="20" maxValue="25" />
				<setAttribute stat="agility" minValue="20" maxValue="25" />			
				<setAttribute stat="vision" value="30" />
				<setAttribute stat="hearing" value="30" />
				<setAttribute stat="vitality" minValue="20" maxValue="25" />
				<setAttribute skill="marksmanship" minValue="20" maxValue="25" />
				<setAttribute skill="weapon_sword" minValue="15" maxValue="20" />
				<setAttribute skill="weapon_large" minValue="15" maxValue="20" />
				<setAttribute skill="heavy_weapons" minValue="15" maxValue="20" />
				<setAttribute skill="defense" minValue="20" maxValue="25" />
			</operations>			
		</rule>

    </rules>
</storm>
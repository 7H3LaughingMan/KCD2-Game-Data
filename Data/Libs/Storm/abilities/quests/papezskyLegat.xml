<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
	
		<rule name="papezskyLegat_legate_horse">
			<selectors>
				<or>
					<hasName name="papezskyLegat_horse_3" />
					<hasName name="papezskyLegat_horse_1" />
				</or>
			</selectors>		
			<operations>
				<setAttribute stat="agility" value="30" />
				<setAttribute stat="courage" value="8" />
				<setAttribute stat="strength" value="3" />
				<setAttribute stat="vitality" value="30" />
			</operations>
		</rule>
		
		<rule name="legat">
			<selectors>
			<or>
				<hasName name="papezskyLegat_legate" />
				<hasName name="papezskyLegat_papalAdjutant_1" />
			</or>
			</selectors>		
			<operations>
				<setAttribute skill="horse_riding" value="20" />
				<setAttribute stat="strength" value="2" />
				<setAttribute stat="agility" value="2" />
				<setAttribute stat="vitality" value="2" />
			</operations>
		</rule>
		
		<rule name="legatRiders">
			<selectors>
				<hasName name="papezskyLegat_papalAdjutant_2" />
			</selectors>		
			<operations>
				<setAttribute skill="horse_riding" value="20" />
			</operations>
		</rule>
		
		<rule name="papezskyLegat_rider_horse">
			<selectors>
			<or>
				<hasName name="papezskyLegat_horse_2" />
			</or>
			</selectors>		
			<operations>
				<setAttribute stat="agility" value="30" />
				<setAttribute stat="courage" value="10" />
				<setAttribute stat="strength" value="10" />
				<setAttribute stat="vitality" value="30" />
			</operations>
		</rule>
    
  <rule name="papezskyLegat_horse_komar">
			<selectors>
			<or>
				<hasName name="papezskyLegat_horse_komar" />
			</or>
			</selectors>		
			<operations>
				<setAttribute stat="agility" value="30" />
				<setAttribute stat="courage" value="10" />
				<setAttribute stat="strength" value="10" />
				<setAttribute stat="vitality" value="30" />
			</operations>
		</rule>

		</rules>
</storm>
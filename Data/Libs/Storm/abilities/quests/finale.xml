<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="finale_attackers_rpg">
			<selectors>
                <hasName name="finale_battle_enemy_group*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="20" />
				<setAttribute stat="agility" value="16" />			
				<setAttribute stat="vitality" minValue="8" maxValue="11" />
				<setAttribute stat="vision" value="30" />
				<setAttribute skill="marksmanship" minValue="6" maxValue="9" />
				<setAttribute skill="weapon_sword"  minValue="11" maxValue="14"/>
				<setAttribute skill="weapon_large" minValue="11" maxValue="14" />
				<setAttribute skill="heavy_weapons" minValue="11" maxValue="14" />
				<setAttribute skill="defense" value="6" />
				<removePerk name="Dodger" />
			</operations>			
		</rule>
		<rule name="finale_wall_attackers_rpg">
			<selectors>
                <hasName name="finale_battle_enemy_wall*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="22" />
				<setAttribute stat="agility" value="17" />			
				<setAttribute stat="vitality" minValue="8" maxValue="11" />
				<setAttribute stat="vision" value="30" />
				<setAttribute skill="marksmanship" minValue="6" maxValue="9" />
				<setAttribute skill="weapon_sword"  minValue="11" maxValue="14"/>
				<setAttribute skill="weapon_large" minValue="12" maxValue="15" />
				<setAttribute skill="heavy_weapons" minValue="11" maxValue="14" />
				<setAttribute skill="defense" value="6" />
				<removePerk name="Dodger" />
			</operations>			
		</rule>
		<rule name="finale_allies_rpg">
			<selectors>
                <hasName name="finale_battle_allies*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="25" />
				<setAttribute stat="agility" value="25" />	
				<setAttribute stat="vitality" minValue="22" maxValue="28" />		
				<setAttribute stat="vision" value="30" />
				<setAttribute skill="marksmanship" minValue="18" maxValue="23" />
				<setAttribute skill="weapon_sword" minValue="18" maxValue="25" />
				<setAttribute skill="weapon_large" minValue="18" maxValue="25" />
				<setAttribute skill="heavy_weapons" minValue="18" maxValue="25" />
				<setAttribute skill="defense" value="25" />
			</operations>			
		</rule>
		<rule name="finale_men_rpg">
			<selectors>
                <hasName name="finale_man*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="22" />
				<setAttribute stat="agility" value="18" />	
				<setAttribute stat="vitality" minValue="15" maxValue="25" />		
				<setAttribute stat="vision" value="30" />
				<setAttribute skill="marksmanship" minValue="9" maxValue="13" />
				<setAttribute skill="weapon_sword" minValue="12" maxValue="15" />
				<setAttribute skill="weapon_large" minValue="12" maxValue="15" />
				<setAttribute skill="heavy_weapons" minValue="12" maxValue="15" />
				<setAttribute skill="defense" value="15" />
			</operations>			
		</rule>
		<rule name="finale_hanusSoldier_rpg">
			<selectors>
                <hasName name="finale_hanusSoldier*" />
			</selectors>	
			<operations>
				<setAttribute stat="courage" value="30" />			
				<setAttribute stat="strength" value="25" />
				<setAttribute stat="agility" value="20" />	
				<setAttribute stat="vitality" minValue="20" maxValue="25" />		
				<setAttribute stat="vision" value="30" />
				<setAttribute skill="marksmanship" minValue="9" maxValue="13" />
				<setAttribute skill="weapon_sword" minValue="15" maxValue="25" />
				<setAttribute skill="weapon_large" minValue="15" maxValue="25" />
				<setAttribute skill="heavy_weapons" minValue="15" maxValue="25" />
				<setAttribute skill="defense" value="25" />
			</operations>			
		</rule>
    </rules>
</storm>
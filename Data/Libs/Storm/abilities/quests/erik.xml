<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
        <rule name="erik_army_rpg">
			<selectors>
				<or>
	                <hasName name="erik_cavalryGroup*" />
	                <hasName name="erik_infantryGroup*" />
	            </or>
			</selectors>	
			<operations>		
				<setAttribute stat="strength" value="30" />
				<setAttribute stat="agility" value="30" />
			</operations>			
		</rule>

        <rule name="erik_combat_perks">
			<selectors>
	            <hasName name="ttro_erik" />
			</selectors>	
			<operations>	
				<addPerk name="Master strike" />

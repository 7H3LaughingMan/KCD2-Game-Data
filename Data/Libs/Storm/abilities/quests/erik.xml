				<addPerk name="Perfect Block" />
				<addPerk name="Riposte" />
				<addPerk name="C01 (longsword)" />
				<addPerk name="C02 (longsword)" />
				<addPerk name="C05 (longsword)" />
				<addPerk name="C06 (longsword)" />
				<addPerk name="C07 (longsword)" />

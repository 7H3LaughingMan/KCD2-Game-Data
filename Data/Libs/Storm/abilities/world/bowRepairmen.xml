<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\..\storm.dtd">
<storm>
    <rules>
        <!-- rules based on https://youtrack.warhorsestudios.cz/issue/KCD2-512051 
            remove other crafting skills from bowRepairmen -->

        <rule name="rpg_bowRepairmen">
            <selectors>
                <isBowRepairman />
            </selectors>
            <operations>
                <setAttribute skill="weaponsmithing" value="0" />
                <setAttribute skill="armourer" value="0" />
                <setAttribute skill="shoemaking" value="0" />
                <setAttribute skill="tailoring" value="0" />
                <setAttribute skill="gunsmithing" value="0" />
            </operations>
        </rule>

    </rules>
</storm>
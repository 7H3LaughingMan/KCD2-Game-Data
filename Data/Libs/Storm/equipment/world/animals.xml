                    <hasName Name="poPytlackeStezce_whiteDeer" />
                </not>
            </selectors>
            
			<operations>
                <setLootInventory preset="inventory_animal_roeBuckMale" />
			</operations>
		</rule>

        <rule name="inventory_animal_roeDeerHind" Mode="and">
            <selectors>
                <hasSoulArchetype name="RoeDeerHind" />
            </selectors>

            <operations>
                <setLootInventory preset="inventory_animal_roeBuckFemale" />
            </operations>
        </rule>

		<rule name="inventory_animal_boar" Mode="and">

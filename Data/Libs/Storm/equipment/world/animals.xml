<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>

        <rule name="inventory_animal_cattle_cow" Mode="and">
            <selectors>
                <hasSoulArchetype name="CattleCow" />
            </selectors>
            
			<operations>
                <setLootInventory preset="inventory_animal_cow" />
			</operations>
		</rule>

        <rule name="inventory_animal_cattle_bull" Mode="and">
            <selectors>
                <hasSoulArchetype name="CattleBull" />
            </selectors>
            
			<operations>
                <setLootInventory preset="inventory_animal_bull" />
			</operations>
		</rule>

        
        <rule name="inventory_animal_sheep_ewe" Mode="and">

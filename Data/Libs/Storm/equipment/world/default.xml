<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>

		<rule name="inventory_default_male" Mode="and">

			<selectors>
				<isMan />
				<isNotPlayer/>
			</selectors>

			<operations>
				<setInventory preset="inventory_default_male" />
			</operations>

		</rule>

		<rule name="inventory_default_female" Mode="and">

			<selectors>
				<isWoman />
				<isNotPlayer/>
			</selectors>

			<operations>
				<setInventory preset="inventory_default_female" />
			</operations>

		</rule>
		
		<rule name="inventory_default_horse" Mode="and">

			<selectors>
				<isHorse />
			</selectors>

			<operations>
				<setInventory preset="inventory_default_horse" />
			</operations>

		</rule>

	</rules>
</storm>

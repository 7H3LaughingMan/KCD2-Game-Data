    <rule name="inventory_closedCastle_malesov">
        <selectors>
            <hasName Name="kmal_closedCastle_Malesov_*" />
        </selectors>
        <operations>
            <setInventory preset="inventory_bergovSoldier_closedCastle"/>
        </operations>
    </rule>

    <rule name="inventory_unique_caponKutnohorskoHorse" Mode="and">
		<selectors>
			<hasName name="kmal_horseCaponKutnohorsko"/>
		</selectors>
		<operations>
			<setInventory preset="inventory_horse_unique_caponKutnohorsko" />
		</operations>
	</rule>

    <rule name="inventory_unique_brabantHorseNoName" Mode="and">
        <selectors>
            <hasName name="kmal_horseBrabantNoname"/>
        </selectors>
        <operations>
            <setInventory preset="inventory_unique_brabantNoNameHorse" />
        </operations>
    </rule>

    <rule name="inventory_carpenter_kmal_man_13" Mode="and">
        <selectors>
            <hasName name="kmal_man_13"/>
        </selectors>
        <operations>
            <setInventory preset="inventory_kmal_man_13" />
        </operations>
    </rule>
  </rules>
</storm>
<?xml version="1.0"?>
<!DOCTYPE storm SYSTEM "..\storm.dtd">
<storm>
	<rules>
		<rule name="inventory_crimeScene_townsman" Mode="and">
			<selectors>
				<hasName name="crimeScene_civilian_corpse*" />
				<hasSocialClass name="townsman" />
			</selectors>
			<operations>
				<setInventory preset="inventory_crimeScene_townsman" />
			</operations>
		</rule>
		<rule name="inventory_crimeScene_nobleman" Mode="and">
			<selectors>
				<hasName name="crimeScene_civilian_corpse*" />
				<hasSocialClass name="nobleman" />
			</selectors>
			<operations>
				<setInventory preset="inventory_crimeScene_nobleman" />
			</operations>
		</rule>
		<rule name="inventory_crimeScene_horse" Mode="and">
			<selectors>
				<hasName name="crimeScene_horse_corpse_*" />
			</selectors>
			<operations>
				<setInventory preset="inventory_crimeScene_horse" />
			</operations>
		</rule>
	</rules>
</storm>

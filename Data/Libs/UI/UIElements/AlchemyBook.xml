<UIElements name="Editor">

  <UIElement name="AlchemyBook" lazy_update="0">

    <GFx file="AlchemyBook.gfx" layer="0">
      <Constraints>
         <Align mode="fixdyntexsize" valign="center" halign="center" scale="1" max="0" />
       <Position width="256" height="256"/>
      </Constraints>
    </GFx>

    <functions>
      <function name="SetHerb" funcname="fc_setHerb">
        <param name="Name" type="string" />
        <param name="LatinName" type="string" />
        <param name="Description" type="string" />
        <param name="Effect" type="string" />
        <param name="Occur" type="string" />
        <param name="IsOnRight" type="bool" />
        <param name="DyslexiaLevel" desc="from 0 (max) to 1 (none)" type="float" />
      </function>

      <function name="SetRecipe" funcname="fc_setRecipe">
        <param name="Id" type="string" />
        <param name="Name" type="string" />
        <param name="Description" type="string" />
        <param name="IsOnRight" type="bool" />
        <param name="DyslexiaLevel" desc="from 0 (max) to 1 (none)" type="float" />
      </function>

      <function name="SetEmptyRecipe" funcname="fc_setEmptyRecipe">
        <param name="IsOnRight" type="bool" />
      </function>

      <function name="ShowRecipeStep" funcname="fc_showRecipeStep">
        <param name="Step" type="int" />
        <param name="Text" type="string" />
      </function>

      <function name="CopyContentFromRightSideToLeftSide" funcname="fc_CopyContentFromRightSideToLeftSide"/>
      <function name="CopyContentFromLeftSideToRightSide" funcname="fc_CopyContentFromLeftSideToRightSide"/>

      <function name="StartClosing" funcname="fc_startClosing" />

   </functions>

   <events>
   </events>

	<MovieClips>
	</MovieClips>

	<arrays>
    <array name="Steps" varname="g_StepsA" />
	</arrays>

  </UIElement>
</UIElements>
